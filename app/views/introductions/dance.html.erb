<div class="introduction">
  <div class="headline">
    <h1>
        <%= title(t('.title')) %> 
        <small>
          <%= @introduction.title %>
        </small>
    </h1>
  </div>

  <div class="col-md-3 col-sm-12">
    <%= link_to(t('.to_introduction'), introductions_path, class: 'btn primary') %>
  </div>

  <div class="col-md-9 col-sm-12">
    <% if @constant.present? %>
      <div class="responsive-video">
        <iframe src="<%= @constant.value %>" frameborder="0" allowfullscreen></iframe>
      </div>
    <% end %>
  </div>
</div>
