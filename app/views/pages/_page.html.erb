<%= content_for :page_sidebar do %>
  <% page.side.each do |element| %>
    <%= render element.to_partial_path, page_element: element, page: page %>
  <% end %>
<% end %>

<%= content_for :page_main do %>
  <% page.main.each do |element| %>
    <%= render element.to_partial_path, page_element: element, page: page %>
  <% end %>
<% end %>

<% if title %>
  <div class="headline page <%= page.namespace %> title">
    <h1><%= page.title %></h1>
  </div>
<% end %>

<% if content_for?(:page_sidebar) || content_for(:council_sidebar) %>

  <div class="col-md-3 col-sm-12 page <%= page.namespace %>">
    <%= yield :council_sidebar if content_for(:council_sidebar) %>
    <%= yield :page_sidebar %>
  </div>

  <div class="col-md-9 col-sm-12 page <%= page.namespace %>">
    <%= yield :page_main %>
  </div>

<% else %>

  <div class="col-md-12 page <%= page.namespace %>">
    <%= yield :page_main %>
  </div>

<% end %>
