<% set_meta_tags(noindex: true) %>

<div class="headline">
  <h1><%= title(@user.to_s) %></h1>
</div>

<% if @user.large_avatar.present? %>
  <div class="col-md-6 col-xs-12">
    <%= render '/users/user', user: @user, no_name: true %>
  </div>
  <div class="col-md-6 col-xs-12">
    <%= image_tag(@user.large_avatar, class: 'img-responsive') %>
</div>

<% else %>

  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <%= render '/users/user', user: @user, no_name: true %>
  </div>
<% end %>
